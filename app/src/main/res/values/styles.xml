<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="title_of_track_on_play_activity">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name_of_group_on_play_activity">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="name_track_item_track">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name_group_item_track">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="duration_item_track">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="time_track_play_activity">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="name_file_item_file">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="little_ripple_image">
        <item name="android:background">@drawable/little_ripple_mask</item>
    </style>

    <style name="big_ripple_image">
        <item name="android:background">@drawable/big_ripple_mask</item>
    </style>

    <style name="separate">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="bottom_sheet_dialog">
        <item name="android:background">@color/white</item>
    </style>

    <style name="bottom_sheet_text">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="track_title_bottom_sheet">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="current_track_title_notification">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="current_track_singer_notification">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>